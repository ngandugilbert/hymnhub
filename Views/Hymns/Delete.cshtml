@model HymnHub.Models.Hymn

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align: center;" class="pt-4 pb-3">Delete</h1>

<h3 style="text-align: center;" class=" pb-5">Are you sure you want to delete this Hymn?</h3>
<div class="container" style="height: 70vh;">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lyrics)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lyrics)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> 
    </form>
</div>
